SMODS.Joker {
  key = "test_joker",
  blueprint_compat = true,
  rarity = 1,
  cost = 4,
  atlas = "jokers",
  pos = { x = 0, y = 0},
  config = { extra = { mult = 2} },
  loc_txt = {
    name = "Test Joker",
    text = {"{X:dark_edition, C:white}^#1# {} Mult"},
  },
  set_badges = function(self, card, badges)
    badges[#badges + 1] = create_badge( localize("k_ktsu_art_credit_biku"), G.C.PURPLE, nil, 0.9 )
  end,
  loc_vars = function(self, info_queue, card)
    return {
      vars = {
        card.ability.extra.mult,
      }
    }
  end,
  calculate = function(self, card, context)
    if context.cardarea == G.jokers and context.joker_main then
      return {
        Emult_mod = lenient_bignum(card.ability.extra.mult),
        message = localize({
          type = "variable",
          key = "a_mult",
          vars = {number_format(card.ability.extra.mult)},
        }),
        colour = G.C.DARK_EDITION
      }
    end
  end
}

